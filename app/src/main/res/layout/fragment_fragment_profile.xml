<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="horizontal"
    tools:context=".FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_circle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/fragment_profile"
        android:textColor="@color/colorY"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Emri"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorY2"
        android:textSize="16sp" />
    <TextView
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:id="@+id/tvLoggedUserFirstName"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Mbiemri"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorY2"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:id="@+id/tvLoggedUserLastName"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorY2"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:id="@+id/tvLoggedUserEmail"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorY" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>