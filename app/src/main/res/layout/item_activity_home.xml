<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    android:paddingTop="5dp"
    android:id="@+id/itemRowHolder">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPostOwner"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPostOwnerName"
                android:text="Filani"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPostTitle"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorblack"
                android:fontFamily="sans-serif-medium"
                android:padding="15dp"
                android:text="TITULLI I POSTIMIT"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPostLocation"
                android:text="Qyteti"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondRowWrapper"
        android:orientation="horizontal">
       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="230dp"
           android:id="@+id/postImagesScroller">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="match_parent"
               android:id="@+id/postImagesHolder">
               <ImageView
                   android:layout_width="260dp"
                   android:layout_height="match_parent"
                   android:id="@+id/ivpostImage1"
                   android:scaleType="fitXY"
                   android:layout_marginHorizontal="10dp"/>
               <ImageView
                   android:layout_width="280dp"
                   android:layout_height="match_parent"
                   android:id="@+id/ivpostImage2"
                   android:adjustViewBounds="true"
                   android:scaleType="fitXY"
                   android:layout_marginHorizontal="10dp"/>
               <ImageView
                   android:layout_width="280dp"
                   android:layout_height="match_parent"
                   android:id="@+id/ivpostImage3"
                   android:scaleType="fitXY"
                   android:layout_marginHorizontal="10dp"/>
           </LinearLayout>
       </HorizontalScrollView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourthRowWrapper"
        android:orientation="horizontal"
        android:layout_weight="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCarManufacturer"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="5dp"
            android:text="MERCEDES" />
        <View
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorY" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCarYearOfProduction"
            android:layout_weight="1"

            android:text="2010"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorY" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCarAcceleratingType"
            android:layout_weight="1"
            android:text="Manual"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:background="@color/background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdRowWrapper"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCarPrice"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/colorY"
            android:layout_marginLeft="5dp"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:text="7500"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/colorY"
            android:text="â‚¬"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fifthRowWrapper"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="BLEJ TANI"
            android:drawableLeft="@drawable/icon_phone"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:layout_marginRight="1.5dp"
            android:background="@drawable/btn_rounded"
            android:id="@+id/btnBuy"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="1.5dp"
            android:background="@drawable/btn_rounded"
            android:drawableLeft="@drawable/ic_favorite_black_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="SHTO SI FAVORIT"
            android:id="@+id/btnAddToFavorites"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorY" />
</LinearLayout>
</RelativeLayout>